extends layout

block content
  h1 Manage Users

  form#filterForm
    .form-row
      .form-group.col-md-2
        label(for='username') Username
        input.form-control(type='text' name='username' id='username')
      .form-group.col-md-2
        label(for='email') Email
        input.form-control(type='text' name='email' id='email')
      .form-group.col-md-2
        label(for='role') Role
        select.form-control(name='role' id='role')
          option(value='') All
          option(value='user') User
          option(value='admin') Admin
      .form-group.col-md-2
        label(for='keyword') Keyword
        input.form-control(type='text' name='keyword' id='keyword')
      .form-group.col-md-2.align-self-end
        button.btn.btn-primary(type='button' id='filterButton') Filter

  .form-row
    .form-group.col-md-3
      label(for='sortField') Sort By
      select.form-control(name='sortField' id='sortField')
        option(value='id') ID
        option(value='username') Username
        option(value='email') Email
        option(value='role') Role
    .form-group.col-md-3
      label(for='sortOrder') Order
      select.form-control(name='sortOrder' id='sortOrder')
        option(value='ASC') Ascending
        option(value='DESC') Descending

  table.table.rounded
    thead
      tr
        th Id
        th Username
        th Email
        th Role
        th Actions
    tbody#usersTableBody

  nav
    ul.pagination
      li.page-item
        button.page-link(type='button' id='previousPage') Previous
      li.page-item
        span.page-link(id='currentPage') 1
      li.page-item
        button.page-link(type='button' id='nextPage') Next

  .alert.alert-danger#userError(style='display: none;') Error fetching users

  script. 
    document.addEventListener('DOMContentLoaded', function() {
      let currentPage = 1;

      function fetchUsers(page = 1) {
        const username = document.getElementById('username').value;
        const email = document.getElementById('email').value;
        const role = document.getElementById('role').value;
        const keyword = document.getElementById('keyword').value;
        const sortField = document.getElementById('sortField').value;
        const sortOrder = document.getElementById('sortOrder').value;

        fetch(`/admin/users/json?page=${page}&username=${username}&email=${email}&role=${role}&keyword=${keyword}&sortField=${sortField}&sortOrder=${sortOrder}`)
          .then(response => response.json())
          .then(data => {
            const usersTableBody = document.getElementById('usersTableBody');
            usersTableBody.innerHTML = '';

            data.users.forEach(user => {
              const row = document.createElement('tr');
              row.innerHTML = `
                <td>${user.id}</td>
                <td>${user.username}</td>
                <td>${user.email}</td>
                <td>${user.role}</td>
                <td>
                  <form class="d-inline" action="/admin/users/edit/${user.id}" method="POST">
                    <div class="row">
                        <div class="col">
                            <input class="form-control form-control-sm" type="text" name="username" style="width:85px;" value="${user.username}" required="">
                        </div>
                        <div class="col"> 
                            <input class="form-control form-control-sm" type="email" name="email" style="width:125px;" value="${user.email}" required="">
                        </div>
                        <div class="col"> 
                            <select class="form-control form-control-sm" name="role">
                                <option value="user">User</option>
                                <option value="admin" selected="">Admin</option>
                                <option value="editor">Editor</option>
                            </select>
                        </div>
                        <div class="col">
                            <button class="btn btn-sm btn-primary" type="submit">Edit</button>
                        </div>
                        <div class="col">
                            <button class="btn btn-sm btn-primary" type="submit" onclick="return confirm('Are you sure?')">Delete</button>
                        </div>
                    </div>
                  </form>
                </td>
              `;
              usersTableBody.appendChild(row);
            });

            document.getElementById('currentPage').innerText = data.page;
            currentPage = data.page;

            document.getElementById('previousPage').disabled = data.page <= 1;
            document.getElementById('nextPage').disabled = data.page >= data.totalPages;

            document.getElementById('userError').style.display = 'none';
          })
          .catch(error => {
            console.error('Error fetching users:', error);
            document.getElementById('userError').style.display = 'block';
          });
      }

      document.getElementById('filterButton').addEventListener('click', () => fetchUsers());

      document.getElementById('previousPage').addEventListener('click', () => fetchUsers(currentPage - 1));
      document.getElementById('nextPage').addEventListener('click', () => fetchUsers(currentPage + 1));

      fetchUsers();

      $('#collapseUsers').addClass('show');
      $('#manage-users').addClass('active');
      
    });