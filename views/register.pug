extends layout

block content
  h1 Register
  form(action='/users/register' method='POST')
    div
      label Username
      input(type='text' name='username' required)
    div
      label Email
      input(type='email' name='email' required)
    div
      label Password
      input(type='password' name='password' required)
    div
      button(type='submit') Register